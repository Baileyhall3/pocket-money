<% layout('layout') %>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        /* General date input styling fix */
        .search,
        .date-filter {
            margin-bottom: 20px;
            position: relative;
        }

        /* For date range inputs */
        .date-filter input {
            width: 100%;
            padding: 10px 15px;
            border-radius: 30px;
            border: 1px solid #ccc;
            font-size: 16px;
            padding-left: 40px; /* Space for calendar icons */
            box-sizing: border-box;
        }

        .date-filter .fa-calendar {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #aaa;
        }

        .date-filter .input-col {
            position: relative;
            width: 48%; /* Split in half to fit both inputs side-by-side */
        }

        /* Input row for date filters */
        .date-filter .input-row {
            display: flex;
            justify-content: space-between;
            gap: 10px;
        }

        /* Specific focus for date filter input */
        .date-filter input:focus {
            border-color: rgb(69, 160, 73);;
        }

        /* Style for collapsible sections */
        .collapsible {
            background-color: #f4f4f9;
            color: black;
            cursor: pointer;
            padding: 10px;
            width: 100%;
            border: none;
            text-align: left;
            outline: none;
            font-size: 18px;
            font-weight: bold;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .collapsible.active, .collapsible:hover {
            background-color: #ddd;
        }

        .collapsible i {
            font-size: 20px;
            margin-left: auto;
        }

        /* Inner sub-sections (for Accounts) */
        .sub-collapsible {
            background-color: #eaeaea;
            font-size: 16px;
            padding: 8px;
            margin-left: 15px;
            cursor: pointer;
        }

        .sub-collapsible i {
            font-size: 16px;
            margin-left: auto;
        }

        /* Ensure the content within collapsible sections expands without squashing */
        .content {
            padding: 10px; /* Add some padding for better spacing */
            display: none; /* Start hidden */
            overflow: visible; /* Allow content to expand */
        }

        /* Additional styles for sub-content */
        .sub-content {
            padding-left: 20px; /* Indent sub-content for visual hierarchy */
            margin-top: 10px; /* Space between sub-sections */
            display: none;
        }


    </style>
    
    <div class="flex-container" style="justify-content: center !important; align-items: stretch; display: flex;">
        <div class="transaction-section" style="overflow-y: auto;">
            <h3>All Transactions</h3>

            <div class="transactions-container">

                <!-- Displaying Account Transactions -->
                <button class="collapsible">
                    Accounts
                    <i class="arrow">&#9660;</i> <!-- Downward arrow -->
                </button>
                <div class="content">
            
                    <!-- Loop over Accounts and create sub-collapsibles for each -->
                    <% if (userAccounts && userAccounts.length > 0) { %>
                        <% userAccounts.forEach((account, index) => { %>
                            <!-- Sub-collapsible for each account -->
                            <button class="sub-collapsible">
                                <span><%= account.name %></span>
                                <i class="arrow">&#9660;</i> <!-- Downward arrow for each account -->
                            </button>
                            <div class="sub-content">
                                <ul class="transaction-list">
                                    <!-- Transactions for the specific account -->
                                    <% transactions.forEach(transaction => { %>
                                        <% if (transaction.accountId === account.id) { %>
                                            <li class="transaction <%= transaction.type %>">
                                                <span><strong><%= transaction.name %></strong></span>
                                                <span>Amount: <%= transaction.amount %></span>
                                                <span>Date: <%= transaction.dateMade %></span>
                                                <span>Category: <%= transaction.category %></span>
                                                <span>Type: <%= transaction.type %></span>
                                            </li>
                                        <% } %>
                                    <% }); %>
                                </ul>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p>No accounts found.</p>
                    <% } %>
                </div>

                <button class="collapsible">
                    Pots
                    <i class="arrow">&#9660;</i>
                </button>
                <div class="content">
            
                    <% if (userPots && userPots.length > 0) { %>
                        <% userPots.forEach((pot, index) => { %>
                            <button class="sub-collapsible">
                                <span><%= pot.name %></span>
                                <i class="arrow">&#9660;</i>
                            </button>
                            <div class="sub-content">
                                <ul class="transaction-list">
                                    <% transactions.forEach(transaction => { %>
                                        <% if (transaction.potId === pot.id) { %>
                                            <li class="transaction <%= transaction.type %>">
                                                <span><strong><%= transaction.name %></strong></span>
                                                <span>Amount: <%= transaction.amount %></span>
                                                <span>Date: <%= transaction.dateMade %></span>
                                                <span>Category: <%= transaction.category %></span>
                                                <span>Type: <%= transaction.type %></span>
                                            </li>
                                        <% } %>
                                    <% }); %>
                                </ul>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p>No pots found.</p>
                    <% } %>
                </div>

                <button class="collapsible">
                    Budgets
                    <i class="arrow">&#9660;</i>
                </button>
                <div class="content">
            
                    <% if (userBudgets && userBudgets.length > 0) { %>
                        <% userBudgets.forEach((budget, index) => { %>
                            <button class="sub-collapsible">
                                <span><%= budget.name %></span>
                                <i class="arrow">&#9660;</i>
                            </button>
                            <div class="sub-content">
                                <ul class="transaction-list">
                                    <% transactions.forEach(transaction => { %>
                                        <% if (transaction.budgetId === budget.id) { %>
                                            <li class="transaction <%= transaction.type %>">
                                                <span><strong><%= transaction.name %></strong></span>
                                                <span>Amount: <%= transaction.amount %></span>
                                                <span>Date: <%= transaction.dateMade %></span>
                                                <span>Category: <%= transaction.category %></span>
                                                <span>Type: <%= transaction.type %></span>
                                            </li>
                                        <% } %>
                                    <% }); %>
                                </ul>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p>No pots found.</p>
                    <% } %>
                </div>
            </div>
            
            

<script>
    function toggleSection(sectionId, chevronId) {
        const section = document.getElementById(sectionId);
        const chevron = document.getElementById(chevronId);

        if (section.style.display === "none") {
            section.style.display = "block";
            chevron.textContent = "▼";  // Down chevron
        } else {
            section.style.display = "none";
            chevron.textContent = "▲";  // Up chevron
        }
    }

    document.addEventListener("DOMContentLoaded", () => {
            const collapsibles = document.querySelectorAll(".collapsible");
            collapsibles.forEach(collapsible => {
                collapsible.addEventListener("click", function() {
                    this.classList.toggle("active");
                    const content = this.nextElementSibling;
                    content.style.display = content.style.display === "block" ? "none" : "block";
                    const icon = this.querySelector('i');
                    icon.classList.toggle('fa-chevron-down');
                    icon.classList.toggle('fa-chevron-up');
                });
            });
    
            const subCollapsibles = document.querySelectorAll(".sub-collapsible");
            subCollapsibles.forEach(subCollapsible => {
                subCollapsible.addEventListener("click", function() {
                    this.classList.toggle("active");
                    const subContent = this.nextElementSibling;
                    subContent.style.display = subContent.style.display === "block" ? "none" : "block";
                    const icon = this.querySelector('i');
                    icon.classList.toggle('fa-chevron-down');
                    icon.classList.toggle('fa-chevron-up');
                });
            });
        });
</script>
