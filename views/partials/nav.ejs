<!-- Right-aligned icon buttons -->
<div class="icon-buttons">
    <button class="icon-btn" id="add-btn">
        <a href="/search"><i class="fa fa-search"></i></a> 
    </button>

    <div class="dropdown">
        <button class="icon-btn" id="alerts-btn">
            <a href="/alerts"><i class="fa fa-bell"></i></a>
            <!-- Display unread count (handle undefined) -->
            <span><%= typeof unreadAlertsCount !== 'undefined' ? unreadAlertsCount : 0 %></span>
        </button>
        
        <div class="dropdown-content right alerts-dropdown" id="alerts-dropdown">
            <% if (userAlerts && userAlerts.length > 0) { %>
                <% userAlerts.forEach((alert, index) => { %>
                    <div class="alert-item" style="border-bottom: 1px solid #ccc; padding: 10px;">
                        <strong><%= alert.title %></strong>
                        <p><%= alert.body %></p>
                        <p style="font-size: 12px; color: #666;"><%= alert.date %></p>
                    </div>
                <% }); %>
            <% } else { %>
                <div>No alerts.</div>
            <% } %>
        </div>
    </div>
    
