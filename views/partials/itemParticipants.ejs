<div class="container-rounded variable-width-50" style="height: fit-content;">
    <h3><%- sharedWithTitle %></h3>
    <div class="friend-row">
        <div class="friend-icon">
            <% if (user.profile_picture) { %>
                <img id="profile-icon" 
                    src="<%= user.profile_picture %>" 
                    alt="Profile Picture"
                    class="profile-img"
                />
            <% } else { %>
                <i class="fa fa-user" style="display: flex;"></i>
            <% } %>
        </div>
        <span class="friend-name">
            Me <%= sharedWithUser.owner_id == user.id ? ' (owner)' : '' %>
        </span>

        <% if (sharedWithUser.owner_id != user.id) { %>
            <div class="dropdown"><a href="#" class="link"><i class="fa fa-ellipsis-h"></i></a>
                <div class="dropdown-content">
                    <a href="#" onclick="openModal('removeParticipantModal', <%= JSON.stringify({ ...item, removeSelf: true }) %>)">Remove Myself</a>
                </div>
            </div>
        <% } %>
    </div>
    <div class="friend-row">
        <div class="friend-icon">
            <% if (sharedWithUser.profile_picture) { %>
                <img id="profile-icon" 
                    src="<%= sharedWithUser.profile_picture %>" 
                    alt="Profile Picture"
                    class="profile-img"
                />
            <% } else { %>
                <i class="fa fa-user" style="display: flex;"></i>
            <% } %>
        </div>
        <span class="friend-name">
            <%= sharedWithUser.first_name + " " + sharedWithUser.last_name + (sharedWithUser.owner_id == sharedWithUser.id ? ' (owner)' : '') %>
        </span>

        <% if (sharedWithUser.owner_id == user.id) { %>
            <div class="dropdown"><a href="#" class="link"><i class="fa fa-ellipsis-h"></i></a>
                <div class="dropdown-content">
                    <a href="#" onclick="openModal('removeParticipantModal', <%= JSON.stringify(item) %>)">Remove Participant</a>
                </div>
            </div>
        <% } %>
    </div>
</div>

<script src="/js/shared.js"></script>