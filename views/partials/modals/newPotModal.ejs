<div id="newPotModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <span class="close">&times;</span>
            <h2>New Pot</h2>
        </div>
        
        <form id="newPotForm" novalidate>
            <label for="potName">Name</label>
            <input type="text" class="modal-input" id="potName" name="potName" required>
        
            <label for="savingGoal">Saving Goal (Â£)</label>
            <input type="number" class="modal-input" id="savingGoal" name="savingGoal" required>

            <label for="targetDate">Target Date</label>
            <input type="date" class="modal-input" id="targetDate" name="targetDate">

            <label for="sharedWith">Share With</label>
            <select id="sharedWith" class="modal-input" name="sharedWith">
                <option value="" selected>-- Select Pot Partner (optional) --</option>
                <% if (friends.length > 0) { %>
                    <% friends.forEach((friend, index) => { %>
                        <option value="friend.userId"><%= friend.userName %></option>
                    <% }); %>
                <% } %>
            </select>

            <div class="modal-row" style="margin-top: 20px;">
                <div class="error" id="submit-error-message"></div>
            </div>
        
            <button type="submit" class="btn">Create Pot</button>
        </form>
    </div>
</div>